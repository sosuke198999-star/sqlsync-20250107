# Server
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Supabase backend (required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace-with-service-role-key

# Optional: anonymous key if needed for public features
#SUPABASE_ANON_KEY=replace-with-anon-key

# Database URL (only if using direct Postgres connection instead of REST)
#DATABASE_URL=postgresql://user:password@host:5432/db?sslmode=require

# Google Drive integration
GOOGLE_SERVICE_ACCOUNT_JSON_PATH=.local/service-account.json
GOOGLE_DRIVE_PARENT_FOLDER_ID=replace-with-folder-id
GOOGLE_DRIVE_FOLDER_NAME_PREFIX=TCAR-
#GOOGLE_DRIVE_SHARE_ANYONE_WITH_LINK=0

# Email delivery (SMTP or other provider)
MAIL_FROM="SQLSync Notifications <no-reply@example.com>"
NOTIFY_ON_CLAIM_CREATED=alerts@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp-user@example.com
SMTP_PASS=replace-with-app-password
SMTP_SECURE=0

# Other integrations (uncomment as needed)
#GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account", ...}
#MAILGUN_API_KEY=
#SLACK_WEBHOOK_URL=