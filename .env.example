# Server
PORT=5000

# Supabase (server-side only)
SUPABASE_URL=https://YOUR-PROJECT.ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# If you plan to run Drizzle migrations against Supabase directly
# (only needed when running `npm run db:push` from your local machine)
#DATABASE_URL=postgresql://postgres:password@host:5432/postgres?sslmode=require

# Google Drive (optional; enables cloud file storage)
# Provide either inline JSON or a file path for the service account
#GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account", ...}
#GOOGLE_SERVICE_ACCOUNT_JSON_PATH=/absolute/path/to/service-account.json
# Parent folder ID where TCAR folders will be created
#GOOGLE_DRIVE_PARENT_FOLDER_ID=YOUR_DRIVE_FOLDER_ID
# Folder name prefix for each TCAR case
#GOOGLE_DRIVE_FOLDER_NAME_PREFIX=TCAR-
# Share files with anyone who has the link (0/1)
#GOOGLE_DRIVE_SHARE_ANYONE_WITH_LINK=1

# Email notifications (optional)
#MAIL_FROM=notifications@example.com
#MAIL_TO=team@example.com
# SMTP
#SMTP_HOST=smtp.example.com
#SMTP_PORT=587
#SMTP_USER=username
#SMTP_PASS=app-password
#SMTP_SECURE=0
# Or Gmail OAuth2
#GMAIL_OAUTH2_CLIENT_ID=
#GMAIL_OAUTH2_CLIENT_SECRET=
#GMAIL_OAUTH2_REFRESH_TOKEN=
